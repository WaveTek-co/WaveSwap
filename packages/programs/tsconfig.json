{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/programs/*": ["./programs/*"],
      "@/tests/*": ["./tests/*"],
      "@/shared/*": ["./src/shared/*"]
    },
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "programs/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "target",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}